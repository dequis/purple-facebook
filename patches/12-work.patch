+		if (g_str_has_prefix(split[i], "uid=")) {
+			uid = g_strstrip(eq + 1);
+		} else if (g_str_has_prefix(split[i], "nonce=")) {
+			nonce = g_strstrip(eq + 1);
+		}
+	}
+
+	if (uid && nonce) {
+		fb_api_auth(api, uid, nonce, "work_sso_nonce");
+	}
+
+	g_strfreev(split);
