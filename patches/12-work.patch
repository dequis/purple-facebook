+gchar *
+fb_util_urlsafe_base64_encode(const guchar *data, gsize len)
+{
+	gchar *out = g_base64_encode(data, len);
+	gchar *c;
+
+	for (c = out; *c; c++) {
+		if (*c == '+') {
+			*c = '-';
+		} else if (*c == '/') {
+			*c = '_';
+		} else if (*c == '=') {
+			*c = '\0';
+			break;
+		}
+	}
+
+	return out;
+}
